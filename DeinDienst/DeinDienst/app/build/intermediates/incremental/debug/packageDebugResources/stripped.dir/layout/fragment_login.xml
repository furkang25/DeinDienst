<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_containerLogin"
    app:defaultNavHost="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Fragment.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/closeButtonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_close"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@drawable/logo" />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/icon_logistics" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="260dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:fontFamily="@font/inter"
            android:text="Wir freuen uns, Sie in unserer Gemeinschaft von Experten und Dienstleistern begrüßen zu dürfen."
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:text="Wir freuen uns, Sie in unserer Gemeinschaft von Experten und Dienstleistern begrüßen zu dürfen."
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="12sp" />

        <Button
            android:id="@+id/registerLink"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_button_3"
            android:fontFamily="@font/inter_medium"
            android:text="Registrieren"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/loginLink"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/inter_medium"
            android:text="Einloggen"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
