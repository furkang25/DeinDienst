<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Fragment.CreateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/Black1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:background="@android:color/transparent"
                    android:contentDescription="TODO"
                    android:minWidth="48dp"
                    android:minHeight="32dp"
                    android:src="@drawable/icon_back" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center|center_vertical"
                    android:text="Erstellen"
                    android:textColor="@color/main_Color"
                    android:textSize="32dp" />

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="match_parent">

                </FrameLayout>

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/name"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="@font/inter_medium"
                        android:hint="Titel"
                        android:inputType="textPersonName"
                        android:minHeight="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/main_Color"
                        android:textColorHint="@color/white50"
                        android:textColorLink="@color/black"
                        android:textIsSelectable="false"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="250dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="40dp"
                        android:fontFamily="@font/inter"
                        android:text="Gib hier deinen Titel ein (min. 20 Zeichen) (Pflichtfeld)"
                        android:textColor="@color/white"
                        android:textSize="8sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="35dp"
                        android:src="@drawable/icon_1" />

                    <EditText
                        android:id="@+id/name2"
                        android:layout_width="280dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="@font/inter_medium"
                        android:hint="Telefonummer"
                        android:inputType="textPersonName"
                        android:minHeight="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/main_Color"
                        android:textColorHint="@color/white50"
                        android:textColorLink="@color/black"
                        android:textIsSelectable="false"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:text="Gib hier deinen Telefonnummer ein (Pflichtfeld) "
                    android:textColor="@color/white"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="35dp"
                        android:src="@drawable/icon_2"
                        tools:ignore="DuplicateIds" />

                    <EditText
                        android:id="@+id/verfuegbarkeitText"
                        android:layout_width="280dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="@font/inter_medium"
                        android:hint="Verfügbarkeit"
                        android:inputType="textPersonName"
                        android:minHeight="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/main_Color"
                        android:textColorHint="@color/white50"
                        android:textColorLink="@color/black"
                        android:textIsSelectable="false"
                        android:textSize="12sp"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:text="Gib hier deinen Verfügbarkeit ein (Pflichtfeld) "
                    android:textColor="@color/white"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="35dp"
                        android:src="@drawable/icon_3"
                        tools:ignore="DuplicateIds" />

                    <EditText
                        android:id="@+id/kategorieFeld"
                        android:layout_width="280dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="@font/inter_medium"
                        android:hint="Kategorie"
                        android:inputType="textPersonName"
                        android:minHeight="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/main_Color"
                        android:textColorHint="@color/white50"
                        android:textColorLink="@color/black"
                        android:textIsSelectable="false"
                        android:textSize="12sp"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:text="Gib hier deinen Kategorie ein (Pflichtfeld) "
                    android:textColor="@color/white"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/beschreibungText"
                        android:layout_width="350dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="left"
                        android:hint="Beschreibung"
                        android:inputType="textPersonName"
                        android:minHeight="20dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/main_Color"
                        android:textColorHint="@color/white50"
                        android:textColorLink="@color/black"
                        android:textIsSelectable="false"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="40dp"
                        android:fontFamily="@font/inter"
                        android:text="Gib hier deinen Beschreibung ein. (min. 9999 Zeichen) (Pflichtfeld) "
                        android:textColor="@color/white"
                        android:textSize="8sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="clip_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/pictureUploadText"
                            android:layout_width="290dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_button"
                            android:fontFamily="@font/inter_medium"
                            android:hint="Bild hinzufügen"
                            android:inputType="textPersonName"
                            android:minHeight="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/main_Color"
                            android:textColorHint="@color/white50"
                            android:textColorLink="@color/black"
                            android:textIsSelectable="false"
                            android:textSize="12sp" />

                        <ImageButton
                            android:id="@+id/pictureUploadButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/rounded_button"
                            android:contentDescription="pictureUploadButton"
                            android:src="@drawable/icon_upload" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="40dp"
                        android:fontFamily="@font/inter"
                        android:text="Gib hier ein Bild hinzu."
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        tools:ignore="DuplicateIds" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="clip_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/linzenzenText"
                            android:layout_width="290dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:autofillHints=""
                            android:background="@drawable/rounded_button"
                            android:fontFamily="@font/inter_medium"
                            android:hint="Lizenzen"
                            android:inputType="textPersonName"
                            android:minHeight="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/main_Color"
                            android:textColorHint="@color/white50"
                            android:textColorLink="@color/black"
                            android:textIsSelectable="false"
                            android:textSize="12sp"
                            tools:ignore="DuplicateIds" />

                        <ImageButton
                            android:id="@+id/linzenzenButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/rounded_button"
                            android:contentDescription="linzenzenButton"
                            android:src="@drawable/icon_upload"
                            tools:ignore="DuplicateIds" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="40dp"
                        android:fontFamily="@font/inter"
                        android:text="Gib hier deinen Lizenzen ein. "
                        android:textColor="@color/white"
                        android:textSize="8sp" />


                </LinearLayout>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="320dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Anzeige aufgeben"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>