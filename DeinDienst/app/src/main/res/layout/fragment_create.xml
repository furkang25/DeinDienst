<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Fragment.CreateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/Black1">

            <TextView
                android:id="@+id/konto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_bold"
                android:text="Erstellen"
                android:textAlignment="center"
                android:textColor="@color/main_Color"
                android:textSize="32dp" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/name"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="@font/inter_medium"
                        android:hint="Titel"
                        android:inputType="textPersonName"
                        android:minHeight="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/main_Color"
                        android:textColorHint="@color/white50"
                        android:textColorLink="@color/black"
                        android:textIsSelectable="false"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="250dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="40dp"
                        android:fontFamily="@font/inter"
                        android:text="Gib hier deinen Titel ein (min. 20 Zeichen) (Pflichtfeld)"
                        android:textColor="@color/white"
                        android:textSize="8sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="35dp"
                        android:src="@drawable/icon_1" />

                    <EditText
                        android:id="@+id/name2"
                        android:layout_width="280dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="@font/inter_medium"
                        android:hint="Telefonummer"
                        android:inputType="textPersonName"
                        android:minHeight="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/main_Color"
                        android:textColorHint="@color/white50"
                        android:textColorLink="@color/black"
                        android:textIsSelectable="false"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:text="Gib hier deinen Telefonnummer ein (Pflichtfeld) "
                    android:textColor="@color/white"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="35dp"
                        android:src="@drawable/icon_2"
                        tools:ignore="DuplicateIds" />

                    <EditText
                        android:id="@+id/name2"
                        android:layout_width="280dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="@font/inter_medium"
                        android:hint="Verfügbarkeit"
                        android:inputType="textPersonName"
                        android:minHeight="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/main_Color"
                        android:textColorHint="@color/white50"
                        android:textColorLink="@color/black"
                        android:textIsSelectable="false"
                        android:textSize="12sp"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:text="Gib hier deinen Verfügbarkeit ein (Pflichtfeld) "
                    android:textColor="@color/white"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="35dp"
                        android:src="@drawable/icon_3"
                        tools:ignore="DuplicateIds" />

                    <EditText
                        android:id="@+id/name2"
                        android:layout_width="280dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="@font/inter_medium"
                        android:hint="Kategorie"
                        android:inputType="textPersonName"
                        android:minHeight="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/main_Color"
                        android:textColorHint="@color/white50"
                        android:textColorLink="@color/black"
                        android:textIsSelectable="false"
                        android:textSize="12sp"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:text="Gib hier deinen Kategorie ein (Pflichtfeld) "
                    android:textColor="@color/white"
                    android:textSize="8sp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>